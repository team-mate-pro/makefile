{
    "name": "team-mate-pro/make",
    "version": "1.0.0",
    "description": "Modular Makefile snippets for Symfony projects with Docker Compose integration. Provides standardized development workflows for Team Mate Pro projects.",
    "type": "library",
    "keywords": [
        "makefile",
        "symfony",
        "docker",
        "docker-compose",
        "development",
        "workflow",
        "phpstan",
        "phpcs",
        "phpunit",
        "git",
        "devops"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian TwarÃ³g",
            "email": "sebastian.twarog1989@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "minimum-stability": "stable",
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!file_exists('Makefile')) { copy('vendor/team-mate-pro/make/Makefile', 'Makefile'); } else { copy('vendor/team-mate-pro/make/Makefile', 'Makefile.example'); }\""
        ],
        "post-update-cmd": [
            "@php -r \"copy('vendor/team-mate-pro/make/Makefile', 'Makefile.example');\""
        ]
    }
}
